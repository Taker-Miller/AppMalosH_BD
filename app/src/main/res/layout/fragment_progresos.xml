<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_dark"
    android:padding="16dp">

    <!-- Título para Progresos -->
    <TextView
        android:id="@+id/tituloProgresos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progresos"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón para Progreso Meta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_meta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/tituloProgresos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Fondo ajustado -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/fondo_progreso_meta"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- Imagen e información de Progreso Meta -->
            <ImageView
                android:id="@+id/image_meta"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_progreso_meta"
                android:background="@drawable/circular_shape"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"/>

            <!-- Texto sobre la imagen -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso Meta"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80000000"
                android:gravity="center"
                android:padding="8dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón para Logros -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_logros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/card_meta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Fondo ajustado para Logros -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/fondo_logros"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- Imagen e información de Logros -->
            <ImageView
                android:id="@+id/image_logros"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_logros"
                android:background="@drawable/circular_shape"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"/>

            <!-- Texto sobre la imagen de Logros -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logros"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80000000"
                android:gravity="center"
                android:padding="8dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón para Metas Cumplidas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_metas_cumplidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/card_logros"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Fondo ajustado para Metas Cumplidas -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/fondo_metas_cumplidas"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- Imagen e información de Metas Cumplidas -->
            <ImageView
                android:id="@+id/image_metas_cumplidas"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_metas_cumplidas"
                android:background="@drawable/circular_shape"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"/>

            <!-- Texto sobre la imagen de Metas Cumplidas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metas Cumplidas"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80000000"
                android:gravity="center"
                android:padding="8dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Botón para Desafíos Cumplidos -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_desafios_cumplidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/card_metas_cumplidas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Fondo ajustado para Desafíos Cumplidos -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/fondo_desafios_cumplidos"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <!-- Imagen e información de Desafíos Cumplidos -->
            <ImageView
                android:id="@+id/image_desafios_cumplidos"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical|start"
                android:src="@drawable/ic_desafios_cumplidos"
                android:background="@drawable/circular_shape"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"/>

            <!-- Texto sobre la imagen de Desafíos Cumplidos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desafíos Cumplidos"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#80000000"
                android:gravity="center"
                android:padding="8dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

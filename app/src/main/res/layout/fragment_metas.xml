<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/purple_dark">

    <!-- Título -->
    <TextView
        android:id="@+id/labelTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tus Malos Hábitos"
        android:textSize="24sp"
        android:textColor="@color/teal_light"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- CardView para contener la lista de malos hábitos -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:backgroundTint="@color/purple_light">

        <LinearLayout
            android:id="@+id/habitosLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>

    <!-- Botones para definir metas y volver -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp">



        <Button
            android:id="@+id/definirMetasButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Definir Metas"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/teal_dark"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:elevation="6dp"
            android:padding="14dp"/>
    </LinearLayout>

</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/purple_dark"
    android:gravity="center"
    tools:context=".fragments.perfil.PerfilFragment">

    <!-- Imagen de perfil sin fondo circular -->
    <ImageView
        android:id="@+id/imagen_perfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_perfil"
        android:contentDescription="Foto de perfil"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_gravity="center" />

    <!-- Espaciado -->
    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <!-- Subtítulo Nombre -->
    <TextView
        android:id="@+id/label_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="14sp"
        android:textColor="@color/gray_light"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto_medium" />

    <!-- Nombre del usuario (se carga dinámicamente) -->
    <TextView
        android:id="@+id/nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginBottom="4dp"
        android:layout_gravity="center" />

    <!-- Subtítulo Apellido -->
    <TextView
        android:id="@+id/label_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:textSize="14sp"
        android:textColor="@color/gray_light"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto_medium" />

    <!-- Apellido del usuario (se carga dinámicamente) -->
    <TextView
        android:id="@+id/apellido_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Subtítulo Correo Electrónico -->
    <TextView
        android:id="@+id/label_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Electrónico"
        android:textSize="14sp"
        android:textColor="@color/gray_light"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto_medium" />

    <!-- Correo del usuario (se carga dinámicamente) -->
    <TextView
        android:id="@+id/correo_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/gray_light"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/roboto_medium" />

    <!-- Botón para cambiar imagen de perfil -->
    <Button
        android:id="@+id/btn_editar_imagen_perfil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cambiar Imagen"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:elevation="6dp"
        android:background="@drawable/button_rounded_modern" />

    <Space
        android:layout_width="20dp"
        android:layout_height="16dp" />

    <!-- Botón para editar perfil -->
    <Button
        android:id="@+id/btn_editar_perfil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:backgroundTint="@color/secondary_color"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto_medium"
        android:elevation="6dp"
        android:background="@drawable/button_rounded_modern" />

</LinearLayout>
